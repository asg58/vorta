    {
      "label": "ðŸš€ VORTA Startup: Auto-Restore + Services",
      "type": "shell",
      "command": "python",
      "args": ["scripts/vorta_auto_startup.py"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [],
